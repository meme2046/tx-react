    "plaintext",
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "yaml",
    "xml",
    "dockerfile",
    "shellscript",
    "markdown",
    "python",
    "html",
    "css",
    "toml",
    "sql",
    "go",
    "lua",
    "nginx",
    "nushell",
    "dotenv"
  ],
  "indentRainbow.excludedLanguages": [],
