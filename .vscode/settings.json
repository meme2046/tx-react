{
  "editor.fontSize": 13,
  "editor.fontFamily": "Consolas,'Courier New',monospace",
  "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
  "terminal.integrated.fontSize": 12,
  // ğŸ“powershelelé…ç½®
  "terminal.integrated.profiles.windows": {
    "pwsh": {
      "path": "c:/scoop/shims/pwsh.exe",
      "args": [],
      "icon": "terminal-powershell"
    },
    "nu": {
      "path": "c:/scoop/shims/nu.exe",
      "args": []
    }
  },
  "window.commandCenter": false,
  "git.autofetch": true,
  "terminal.integrated.defaultProfile.windows": "nu",
  "terminal.integrated.automationProfile.windows": {
    "path": "c:/scoop/shims/pwsh.exe",
    "args": []
  },
  // ç»ˆç«¯æ—¥å¿—çº§åˆ«
  "terminal.integrated.enablePersistentSessions": true,
  "terminal.integrated.showExitAlert": true,
  // ğŸ“ruff
  "ruff.fixAll": true,
  "[python]": {
    // ğŸ“yapfé…ç½®(æ ¼å¼åŒ–å·¥å…·)
    // "editor.defaultFormatter": "eeyore.yapf",
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit", // ä¿å­˜æ—¶è‡ªåŠ¨ä¿®å¤å¯ä¿®å¤çš„ lint é”™è¯¯
      "source.organizeImports.ruff": "explicit" // ä¿å­˜æ—¶è‡ªåŠ¨æ’åº import è¯­å¥
    }
  },
  "python.analysis.typeCheckingMode": "standard",
  "python.envFile": "${workspaceFolder}/.env",
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}"
  },
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${workspaceFolder}"
  },
  "terminal.integrated.env.osx": {
    "PYTHONPATH": "${workspaceFolder}"
  },
  // ğŸ“jupyter.notebook
  "jupyter.notebookFileRoot": "${workspaceFolder}", // ğŸ“Œ
  "notebook.defaultFormatter": "charliermarsh.ruff",
  "notebook.formatOnSave.enabled": true, // notebook ä¿å­˜æ—¶è‡ªåŠ¨æ ¼å¼åŒ–
  "notebook.output.textLineLimit": 18,
  "notebook.codeActionsOnSave": {
    "notebook.source.fixAll": "explicit", // notebook ä¿å­˜æ—¶è‡ªåŠ¨ä¿®å¤å¯ä¿®å¤çš„ lint é”™è¯¯
    "notebook.source.organizeImports": "explicit" // notebook ä¿å­˜æ—¶è‡ªåŠ¨æ’åº import è¯­å¥
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        // prettier
        "match": "\\.(ts|js|tsx|jsx|json|html|css|graphql|gql|yaml|yml|md)$",
        "notMatch": "node_modules/*$",
        "isAsync": true,
        "cmd": "me prettier ${file}"
      },
      {
        // @prettier/plugin-xml
        "match": "\\.(xml|svg)$",
        "isAsync": true,
        "cmd": "me prettier ${file}"
      },
      {
        // prettier-plugin-toml
        "match": "\\.(toml)$",
        "isAsync": true,
        "cmd": "me prettier ${file}"
      },
      {
        // prettier-plugin-nginx
        "match": "\\.(nginx)$",
        "isAsync": true,
        "cmd": "me prettier ${file}"
      },
      {
        // prettier-plugin-sh
        "match": "\\.(sh|env|Dockerfile|properties|gitignore|dockerignore|prettierignore)$",
        "notMatch": "\\.(nu)$",
        "isAsync": true,
        "cmd": "me prettier ${file}"
      },
      {
        // no-dot-ext
        "match": "Dockerfile$",
        "isAsync": true,
        "cmd": "me prettier ${file}"
      },
      {
        // nushell
        "match": "\\.(nu)$",
        "isAsync": true,
        "cmd": "topiary format ${file}"
      }
    ]
  },
  "editor.formatOnSave": false, // ä¿å­˜æ—¶æ ¼å¼åŒ–
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  // ğŸ“å½©è™¹ç¼©è¿› indent-rainbow é…ç½®
  "editor.tabSize": 2,
  "indentRainbow.ignoreErrorLanguages": ["plaintext"],
  "indentRainbow.includedLanguages": [
    "plaintext",
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "yaml",
    "xml",
    "dockerfile",
    "shellscript",
    "markdown",
    "python",
    "html",
    "css",
    "toml",
    "sql",
    "go",
    "lua",
    "nginx",
    "nushell",
    "dotenv"
  ],
  "indentRainbow.excludedLanguages": [],
  // ğŸ“code-runner
  "code-runner.clearPreviousOutput": true,
  "code-runner.executorMap": {
    "python": "set PYTHONPATH=. && set PYTHONIOENCODING=utf-8 && $pythonPath $fullFileName",
    "typescript": "node --loader ts-node/esm --disable-warning=ExperimentalWarning"
  },
  "json.format.enable": true,
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "GitHub Dark Colorblind (Beta)",
  "terminal.integrated.enableMultiLinePasteWarning": "auto",
  // ğŸ“vscodeè‡ªå¸¦cssè§„åˆ™é…ç½®
  "css.validate": true,
  "css.lint.unknownAtRules": "ignore", // å¿½ç•¥æœªçŸ¥çš„ @ è§„åˆ™
  "css.lint.unknownProperties": "warning", // å¯¹æœªçŸ¥çš„å±æ€§å‘å‡ºè­¦å‘Š
  "css.lint.vendorPrefix": "warning", // å¯¹ä¾›åº”å•†å‰ç¼€å‘å‡ºè­¦å‘Š
  "css.lint.duplicateProperties": "error", // å¯¹é‡å¤çš„å±æ€§å‘å‡ºé”™è¯¯
  "css.lint.emptyRules": "warning",
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.hg/**",
    "**/.svn/**",
    "**/src/components/ui/**/*"
  ],
  "files.associations": {
    ".prettierrc": "json",
    "*.txt": "markdown",
    ".nginx": "nginx",
    "*.svg": "xml",
    "*.sh": "shellscript",
    "*.conf": "ini",
    "*.nu": "nushell",
    "*.env": "dotenv",
    "*.xml": "xml",
    "*.py": "python",
    "*.toml": "toml"
  }
}
